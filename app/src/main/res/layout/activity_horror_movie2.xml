<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorrorMovie2">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="413dp"
        android:layout_height="893dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="373dp"
            android:layout_height="850dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom"
            android:backgroundTint="#DCCAC9C9"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout1">


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="75dp"
                android:background="@drawable/custom"
                android:backgroundTint="#0371C6">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.02"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.007"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:id="@+id/list"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="The Nun"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/h2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="The Nun"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="Runtime: 1 hr, 36 mins\n
                                \n A priest with a haunted past and a novice on the threshold of her final vows are sent by the Vatican to
                                investigate the death of a young nun in Romania and confront a malevolent force in the form of a demonic nun."
                        android:textColor="@color/black"
                        android:textSize="15sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Schedule for Today"
                    android:background="@drawable/custom"
                    android:textColor="@color/black"
                    android:backgroundTint="#0371C6"
                    android:textSize="25sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="01:00 - 02:40pm "
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black">
                </TextView>

                <ImageView
                    android:id="@+id/timeBtn1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/arrow"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    app:tint="#0E7BCF">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="04:00 - 05:40pm "
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black">
                </TextView>

                <ImageView
                    android:id="@+id/timeBtn2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/arrow"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    app:tint="#0E7BCF">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="08:00 - 09:40pm "
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black">
                </TextView>

                <ImageView
                    android:id="@+id/timeBtn3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/arrow"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    app:tint="#0E7BCF">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>