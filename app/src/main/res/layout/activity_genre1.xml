<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".genre1">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="413dp"
        android:layout_height="893dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:id="@+id/layout20"
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:background="@drawable/custom"
            android:backgroundTint="#0371C6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Action Movie"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="25sp" />
        </LinearLayout>


    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:scrollbarSize="10dp"
        android:layout_weight="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout20">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="395dp"
            android:layout_height="800dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom"
            android:backgroundTint="#EDB1AEAE"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout1">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/am1" />

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titl1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="AVATAR:THE WAY OF WATER"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Runtime: 3 hrs, 12 mins\n
                            Description: Once a familiar threat returns to finish what was previously
                            started, Jake must work with Neytiri and the army of the Na'vi race to protect their planet."
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="₱ 00.00"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/book1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Book"></Button>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/am2" />

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="PLANE"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Runtime: 1 hr, 48 mins \n
                            \nDescription: A pilot finds himself caught in a war zone after he's
                            forced to land his commercial aircraft during a terrible storm."
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="₱ 00.00"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/book2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Book"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/am3" />

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Fantastic Beasts: \nThe Secrets of Dumbledore (2022)"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Runtime: 2 hrs, 23 mins \n
                           \n Description: Professor Albus Dumbledore must assist Newt Scamander and his partners
                            as Grindelwald begins to lead an army to eliminate all Muggles."
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="₱ 00.00"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/book3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Book">

                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie4"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/am4" />

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Morbius (2022)"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:text="Runtime: 1 hr, 44 mins \n
                            \nDescription:Biochemist Michael Morbius tries to cure himself of a rare blood disease,
                            but he inadvertently infects himself with a form of vampirism instead."
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout15"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="₱ 00.00"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/book4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Book"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie5"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/am5" />

                <LinearLayout
                    android:id="@+id/layout24"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Avengers: End Game"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:text="Runtime: 3 hrs, 2 mins\n
                            \nDescription:The universe is in ruins. With the help of remaining allies,the Avengers assemble
                            once more in order to reverse Thanos' actions and restore balance to the universe."
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout9"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/price5"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="₱ 00.00"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/book5"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Book">

                    </Button>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>