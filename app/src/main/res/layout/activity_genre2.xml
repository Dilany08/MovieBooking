                        <TextView
                            android:id="@+id/price4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="₱ 550.00"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/book4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#0371C6"
                            android:text="Book">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movie5"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/r5" />

                    <LinearLayout
                        android:id="@+id/layout24"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title5"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="Titanic"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Runtime: 3 hrs, 14 mins\n
                                    \n    A seventeen-year-old aristocrat falls in love with a kind but poor
                                    artist aboard the luxurious, ill-fated R.M.S. Titanic."
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout9"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:paddingVertical="5dp">

                        <TextView
                            android:id="@+id/price5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="₱ 650.00"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/book5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
