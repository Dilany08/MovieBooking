                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#0371C6"
                            android:text="Book">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movie3"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/r3" />

                    <LinearLayout
                        android:id="@+id/layout6"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="The Hows of Us"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Runtime: 1 hr, 58 mins\n
                                \n   A bartender romances a domestic helper
                                despite the fact that she is moving to Canada."
                            android:textColor="@color/black"
                            android:backgroundTint="#0371C6"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:paddingVertical="5dp">

                        <TextView
                            android:id="@+id/price3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="₱ 550.00"
