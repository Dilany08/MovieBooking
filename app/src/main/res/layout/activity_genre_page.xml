<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenrePage">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="413dp"
        android:layout_height="893dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="373dp"
            android:layout_height="850dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom"
            android:backgroundTint="#EDB1AEAE"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout1">

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/custom"
                android:text="Choose Genre:"
                android:textColor="#000000"
                android:backgroundTint="#0371C6"
                android:textSize="25sp" />
        <!--Genre(Action)-->
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/action"
                    android:layout_width="330dp"
                    android:layout_height="119dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/custom" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="85dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/actMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Action Movie"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textColor="@color/black" />
                <ImageView
                    android:id="@+id/btn1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/arrow"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    app:tint="#0E7BCF" />
            </LinearLayout>

            <!--Genre(Romantic)-->
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/romantic"
                    android:layout_width="330dp"
                    android:layout_height="119dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/custom" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="85dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/romMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Romantic Movie"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textColor="@color/black" />
                <ImageView
                    android:id="@+id/btn2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/arrow"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    app:tint="#0E7BCF" />
            </LinearLayout>
            <!--Genre(Horror)-->
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/horror"
                    android:layout_width="330dp"
                    android:layout_height="119dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/custom" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="85dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/horMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Horror Movie"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textColor="@color/black" />
                <ImageView
                    android:id="@+id/btn3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/arrow"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    app:tint="#0E7BCF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>